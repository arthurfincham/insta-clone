<div class="form-signin">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <img class="mb-4" src="<%= image_url('instalogo.png')%>" alt="" width="72" height="auto">
    <h1 class="h3 mb-3 fw-normal">Please sign up</h1>

    <div class="form-floating w-100">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "floatingInput", class: "form-control"%>
      <label for="floatingInput">Email address</label>
    </div>

     <div class="form-floating w-100">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", id: "floatingName", class: "form-control"%>
      <label for="floatingName">Name</label>
    </div>

    <div class="form-floating w-100">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", id: "floatingusername", class: "form-control"%>
      <label for="floatingusername">Username</label>
    </div>

    <div class="form-floating w-100">
      <%= image_tag f.object.image_url if f.object.cached_image_data %>
    <%= f.hidden_field :image, value: f.object.cached_image_data %>
    <%= f.file_field :image , :class => 'form-control', :type => 'file' %>
    </div>



    <div class="form-floating w-100">
    <%= f.password_field :password, autocomplete: "current-password", id: "floatingFirstPassword", class: "form-control"%>
    <label for="floatingFirstPassword">Password</label>
    </div>

    <div class="form-floating w-100">
    <%= f.password_field :password_confirmation, autocomplete: "confirm-password", id: "floatingPassword", class: "form-control"%>
    <label for="floatingPassword">Confirm your password</label>
    </div>


    <br>
    <%= f.submit "Sign up" %>
    <p class="mt-5 mb-3 text-muted">&copy; 2017â€“2021</p>
<% end %>
</div>

<%= render "devise/shared/links" %>