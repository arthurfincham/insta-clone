<div class="collapse" id="<%= "collapseExample#{@int}"%>">
  <div class="p-1 card-body">
    <small class="list-group p-1 post-comment-row">
      <a href="<%= user_path(current_user.id)%>" class="post-profile-pic">
        <%= id2ProfilePic(current_user.id) %>
        <%= id2username(current_user.id) %>
      </a>
      <%= form_for [post, post.comments.build] do |f| %>
        <%= f.hidden_field :post_id %>
        <%= f.text_field :content, class: 'form-control form-control-sm' %>
        <%= button_tag :submit do %>
          <i class="bi bi-chat-fill"></i>
        <% end %>
      <% end %>
    </small>
  </div>
  <div class="p-1 card-body">
    <% post.comments.each do |comment| %>
      <div class="list-group p-1 post-comment-row">
        <% if comment.user_id %>
          <a href="<%= user_path(comment.user_id)%>"><%= id2ProfilePic(comment.user_id) %></a>
          <small class="post-profile-pic mx-1"><%= id2username(comment.user_id) %></small>
          <small><%= comment.content %></small>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
