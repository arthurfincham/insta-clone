<div class="new-post-container">
  <img class="mb-4" src="<%= image_url('blacklogo.png')%>" alt="" width="300" height="auto">
  <% if current_user %>
    <div class="field">
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn nav-buttons  btn-outline-danger' %>
    </div>
      <br>
    <div class="field">
      <%= link_to 'New Post', new_post_path, method: :get, class: 'btn nav-buttons  btn-outline-danger' %>
    </div>
  <% else %>
    <div class="field">
      <%= link_to 'Login', new_user_session_path, method: :get, class: 'btn nav-buttons  btn-outline-danger' %>
    </div>
  
    <div class="field">
      <%= link_to 'Sign Up', new_user_registration_path, method: :get, class: 'btn nav-buttons  btn-outline-danger' %>
    </div>
  <% end %>
</div>
